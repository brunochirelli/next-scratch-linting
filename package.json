{
  "name": "next-scratch-linting",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint:js": "eslint src/**/*.{js,jsx,ts,tsx,mdx}",
    "lint:css": "stylelint src/**/*.{js,jsx,ts,tsx,css}",
    "lint:prettier": "prettier --write src/**/*.{js,jsx,ts,tsx,mdx}",
    "lint": "yarn lint:prettier && yarn lint:css && yarn lint:js",
    "analyze": "ANALYZE=true yarn build"
  },
  "dependencies": {
    "next": "11.0.1",
    "react": "17.0.2",
    "react-dom": "17.0.2",
    "styled-components": "^5.3.0",
    "stylelint": "^13.13.1",
    "stylelint-config-styled-components": "^0.1.1"
  },
  "devDependencies": {
    "@next/bundle-analyzer": "^11.0.1",
    "@types/react": "^17.0.11",
    "@types/styled-components": "^5.1.10",
    "babel-plugin-styled-components": "^1.12.0",
    "eslint": "7.29.0",
    "eslint-config-next": "11.0.1",
    "next-compose-plugins": "^2.2.1",
    "prettier": "^2.3.1",
    "stylelint-config-rational-order": "^0.1.2",
    "stylelint-order": "^4.1.0",
    "typescript": "^4.3.4"
  }
}
